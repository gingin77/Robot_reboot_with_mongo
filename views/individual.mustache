<!DOCTYPE html>
 <html>
 	<head>
 		<meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/style.css" />
 	</head>
 	<body>
    {{#robots}}
    <div class="display_top">
      <img class="round_frame" src="{{avatar}}" />
      <div class="top_text">
        <h2>{{name}}</h2>
        {{#address}}
        <span>{{#address.city}}{{address.city}}, {{/address.city}}{{address.country}}</span> |
        {{/address}}{{#job}}<span>{{job}}, {{company}}</span>{{/job}}
        {{^job}}<span class="available">Available for hire</span>{{/job}}
        <p>{{email}} | {{phone}}</p>
      </div>
    </div>

    <div class="display_lower">
      <div class="row">
        {{#university}}
        <h3 class="bold-right-align">Education</h3><span class="spacer"></span><span class="left-align">{{university}}</span>
        {{/university}}
      </div>
      <div class="row">
        <h3 class="bold-right-align">Skills</h3>
        <span class="spacer"></span>
        <span class="left-align">
          {{#skills}}
          {{.}}<br />
          {{/skills}}
        </span>
      </div>

    </div>

    {{/robots}}
 	</body>
 </html>
